<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= current_user.username %> | <%= link_to 'Sing Out', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sing In', new_user_session_path %>    
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
