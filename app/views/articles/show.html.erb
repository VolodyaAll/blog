<h1>Article <%= @article.id %></h1>
<h2><%= @article.title %></h2>
<p>
  <%= @article.text %>
</p>
<hr />
<h3>Comments:</h3>

<ul>
  <%= render partial: "comment", collection: @article.comments, as: :item %>
</ul>

<h3>Add new comment</h3>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>

    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>